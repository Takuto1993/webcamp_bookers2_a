<div class="col-md-3">
 <h2>User info</h2>
 <table class="table">
   <tr>
    <th>name</th>
    <th><%= current_user.name %></th>
   </tr>
   <tr>
    <th>introduction</th>
    <th><%= current_user.introduction %></th>
   </tr>
 </table>
 <div>
  <p><%= link_to "edit", edit_user_path(current_user), class:"btn btn-outline-secondary btn-block edit_user330" %></p>
 </div>

 <h2>New Book</h2>
 <%= form_with model: @book, url: '/users', method: :@post do  |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %> <br>
   <%= f.submit 'Creat Book', class:"btn btn-success" %>
 <% end %>
</div>
