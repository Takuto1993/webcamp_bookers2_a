<p id="notice"></p>
<div class='col-md-8 ofset-md-1'>
 <h2>Users</h2>
 
 <% @users.each do |user| %>
 
 <table class='table table-hover table-inverse'>
  <thead>
   <tr>
    <th>image</th>
    <th>name</th>
    <th></th>
    <th colspan="3"></th>
   </tr>
  </thead>
  <tbody>
   <tr>
    <td><%= image_tag user.get_profile_image(100,100) %></td>
    <td><%= user.name %></td>
    <td>
     <%= link_to user_path(user.id) do %>
      <%= "show" %>
     <% end %>
     </td>
   </tr>
  </tbody>
 </table>
 
 <% end %>
 
</div>
